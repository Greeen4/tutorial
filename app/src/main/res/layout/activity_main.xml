    <LinearLayout
        android:id="@+id/tower_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

    <ImageView
        android:id="@+id/eifel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:src="@drawable/eiffel_tower" />

    <ImageView
        android:id="@+id/lava"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:src="@drawable/lava" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/save_level_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@android:color/black">
        tools:visibility="visible">

    <ImageView
        android:id="@+id/level_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:src="@drawable/number_one" />

    <ImageView
        android:id="@+id/level_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:src="@drawable/number_2" />
    <ImageView
        android:id="@+id/level_3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:src="@drawable/number_3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chose_level_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@android:color/white">
        tools:visibility="visible">

    <ImageView
        android:id="@+id/chose_level_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:src="@drawable/number_one" />

    <ImageView
        android:id="@+id/chose_level_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:src="@drawable/number_2" />
    <ImageView
        android:id="@+id/chose_level_3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:src="@drawable/number_3" />
    </LinearLayout>

    <TextView
        android:id="@+id/game_over_anim_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/game_over"
        android:textColor="#FF0000"
        android:textSize="60sp"
        android:visibility="gone"
        tools:visibility="visible"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/name_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/level_1"
        android:textColor="#FF0000"
        android:textSize="60sp"
        android:visibility="gone"
        tools:visibility="visible"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/level_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/level_was_saved"
        android:textColor="#FF0000"
        android:textSize="60sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible" />
